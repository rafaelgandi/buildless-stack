{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:react-hooks/recommended",
        "plugin:lit/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": [
        "react",
        "react-hooks"
    ],
    "rules": {
        "strict":             [ "error", "safe" ],
        "no-debugger":        "error",    
        "keyword-spacing":    "error",
        "no-var": "warn",
        "no-undef":           "warn",
        "no-undefined":       "warn",
        "comma-dangle":       [ "error", "never" ],
        "semi":               [ "error", "always" ],        
        "guard-for-in":       "off",
        "no-with":            "error",
        "valid-typeof":       "error",
        "no-continue":        "off",
        "no-extra-semi":      "warn",
        "no-unreachable":     "warn",
        "no-extra-boolean-cast": "off",
        "eqeqeq": "error",
        "camelcase": "warn",
        "no-unused-vars": "warn",
        "react/display-name": "off",
        "react/react-in-jsx-scope": "off",
        "react/prop-types": ["warn", {"skipUndeclared": true}],
        "lit/binding-positions": "off",
        "lit/no-invalid-html": "off"
    }
}